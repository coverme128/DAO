{
  "name": "acoda",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "next dev",
    "dev:backend": "tsx watch server/index.ts",
    "build": "next build && npm run build:backend",
    "build:backend": "tsc --project server/tsconfig.json",
    "start": "next start",
    "start:backend": "node server/dist/index.js",
    "lint": "eslint"
  },
  "dependencies": {
    "next": "16.1.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "@supabase/supabase-js": "^2.47.10",
    "@azure/msal-browser": "^3.20.0",
    "three": "^0.169.0",
    "@react-three/fiber": "^8.18.0",
    "@react-three/drei": "^9.114.3",
    "@pixiv/three-vrm": "^3.4.4",
    "zustand": "^5.0.1",
    "stripe": "^17.3.1",
    "microsoft-cognitiveservices-speech-sdk": "^1.40.0",
    "@azure/openai": "^2.0.0",
    "zod": "^3.23.8",
    "date-fns": "^4.1.0",
    "express": "^4.21.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/three": "^0.169.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/multer": "^1.4.11",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "tsx": "^4.19.1",
    "concurrently": "^9.1.0"
  }
}
